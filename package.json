{
  "name": "oauth-token-generator",
  "displayName": "OAuth Token Generator",
  "description": "Generate OAuth bearer tokens using client credentials flow directly from VS Code",
  "publisher": "CodeMaman",
  "icon": "assets/avatar.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hmredmond/auth0-token-generator-vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/hmredmond/auth0-token-generator-vscode-extension/issues"
  },
  "homepage": "https://github.com/hmredmond/auth0-token-generator-vscode-extension#readme",
  "version": "2.3.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "oauth",
    "oauth2",
    "authentication",
    "bearer token",
    "jwt",
    "client credentials",
    "token generator",
    "auth0",
    "okta",
    "identity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oauth-token-generator.generateToken",
        "title": "Generate Bearer Token",
        "category": "OAuth"
      },
      {
        "command": "oauth-token-generator.configureCredentials",
        "title": "Configure Credentials",
        "category": "OAuth"
      },
      {
        "command": "oauth-token-generator.selectEnvironment",
        "title": "Select Environment",
        "category": "OAuth"
      },
      {
        "command": "oauth-token-generator.viewStoredTokens",
        "title": "View Stored Tokens",
        "category": "OAuth"
      },
      {
        "command": "oauth-token-generator.refreshEnvironments",
        "title": "Refresh Environments",
        "category": "OAuth",
        "icon": "$(refresh)"
      },
      {
        "command": "oauth-token-generator.refreshTokens",
        "title": "Refresh Tokens",
        "category": "OAuth",
        "icon": "$(refresh)"
      },
      {
        "command": "oauth-token-generator.openConfigFromTree",
        "title": "Configure Credentials",
        "category": "OAuth",
        "icon": "$(add)"
      },
      {
        "command": "oauth-token-generator.editEnvironmentFromTree",
        "title": "Edit Environment",
        "category": "OAuth",
        "icon": "$(pencil)"
      },
      {
        "command": "oauth-token-generator.generateTokenFromTreeInline",
        "title": "Get Token",
        "category": "OAuth",
        "icon": "$(symbol-key)"
      },
      {
        "command": "oauth-token-generator.exportEnvironments",
        "title": "Export Environments",
        "category": "OAuth",
        "icon": "$(save)"
      },
      {
        "command": "oauth-token-generator.importEnvironments",
        "title": "Import Environments",
        "category": "OAuth",
        "icon": "$(import)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "oauth-token-generator.importEnvironments",
          "when": "view == auth0Environments",
          "group": "navigation@1"
        },
        {
          "command": "oauth-token-generator.exportEnvironments",
          "when": "view == auth0Environments",
          "group": "navigation@2"
        },
        {
          "command": "oauth-token-generator.refreshEnvironments",
          "when": "view == auth0Environments",
          "group": "navigation@3"
        },
        {
          "command": "oauth-token-generator.openConfigFromTree",
          "when": "view == auth0Environments",
          "group": "navigation@4"
        },
        {
          "command": "oauth-token-generator.refreshTokens",
          "when": "view == auth0Tokens",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "oauth-token-generator.generateTokenFromTreeInline",
          "when": "view == auth0Environments && viewItem == environment",
          "group": "inline@1"
        },
        {
          "command": "oauth-token-generator.editEnvironmentFromTree",
          "when": "view == auth0Environments && viewItem == environment",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "OAuth Token Generator",
      "properties": {
        "oauthTokenGenerator.defaultAudience": {
          "type": "string",
          "default": "",
          "description": "Default audience for token requests"
        },
        "oauthTokenGenerator.tokenExpiryWarning": {
          "type": "number",
          "default": 300,
          "description": "Show warning when token expires in X seconds"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auth0-token-generator",
          "title": "Auth0 Token Generator",
          "icon": "$(key)"
        }
      ]
    },
    "views": {
      "auth0-token-generator": [
        {
          "id": "auth0Environments",
          "name": "Environments",
          "icon": "$(server-environment)",
          "contextualTitle": "Auth0 Environments"
        },
        {
          "id": "auth0Tokens",
          "name": "Generated Tokens",
          "icon": "$(lock)",
          "contextualTitle": "Auth0 Tokens"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "release": "vsce package && mkdir -p build && mv *.vsix build/",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.2.3"
  }
}
