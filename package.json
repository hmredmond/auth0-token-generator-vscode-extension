{
  "name": "auth0-token-generator",
  "displayName": "Auth0 Token Generator",
  "description": "Generate bearer tokens for Auth0 clients directly from VS Code",
  "publisher": "Hannah Redmond (hannah.redmond@keyloop.com)",
  "version": "0.1.7",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "auth0",
    "authentication",
    "bearer token",
    "oauth",
    "jwt"
  ],
  "activationEvents": [
    "onCommand:auth0-token-generator.generateToken",
    "onCommand:auth0-token-generator.configureCredentials",
    "onCommand:auth0-token-generator.selectEnvironment"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auth0-token-generator.generateToken",
        "title": "Generate Bearer Token",
        "category": "Auth0"
      },
      {
        "command": "auth0-token-generator.configureCredentials",
        "title": "Configure Credentials",
        "category": "Auth0"
      },
      {
        "command": "auth0-token-generator.selectEnvironment",
        "title": "Select Environment",
        "category": "Auth0"
      },
      {
        "command": "auth0-token-generator.viewStoredTokens",
        "title": "View Stored Tokens",
        "category": "Auth0"
      }
    ],
    "configuration": {
      "title": "Auth0 Token Generator",
      "properties": {
        "auth0TokenGenerator.defaultAudience": {
          "type": "string",
          "default": "",
          "description": "Default audience for token requests"
        },
        "auth0TokenGenerator.tokenExpiryWarning": {
          "type": "number",
          "default": 300,
          "description": "Show warning when token expires in X seconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "release": "vsce package && mkdir -p build && mv *.vsix build/",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@types/vscode": "^1.60.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
